<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/shareprofile_imageview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:src="@drawable/default_usericon"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="100dp"
        android:layout_toEndOf="@id/shareprofile_imageview"
        android:orientation="vertical">


        <TextView
            android:id="@+id/shareprofile_nameview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saif Ali Shaikh"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/shareprofile_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class 10"
            android:textColor="@color/light_gray"
            android:textSize="14sp"
            android:textStyle="bold" />


    </LinearLayout>

    <Button
        android:id="@+id/shareprofile_sendbtn"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/blue"
        android:text="Send"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <Button
        android:id="@+id/shareprofile_sendedbtn"
        android:layout_width="65dp"
        android:layout_height="45dp"
        android:text="Sent"
        android:textSize="12sp"
        android:textAllCaps="false"
        android:visibility="gone"
        android:textColor="@color/light_gray"
        android:backgroundTint="@color/white"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"/>


</RelativeLayout>