<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:layout_marginStart="5dp"
    android:background="@drawable/latestmessge_ripple"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/meprofile_followers_imageview"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/default_usericon" />


    <TextView
        android:id="@+id/meprofile_followers_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/meprofile_followers_imageview"
        android:layout_centerHorizontal="true"
        android:lines="1"
        android:maxWidth="80dp"
        android:maxLines="1"
        android:text=""
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/light_gray"
        android:textSize="15dp" />

</RelativeLayout>