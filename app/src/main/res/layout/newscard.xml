<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <androidx.cardview.widget.CardView
        android:id="@+id/newscard_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:elevation="20dp"
        android:layout_margin="5dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/newscard_imageview"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="fitXY"
                android:src="@drawable/testingimage" />

            <TextView
                android:id="@+id/newscard_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/newscard_imageview"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/gray"
                android:textSize="17sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/newscard_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/newscard_heading"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:maxLines="5"
                android:text=""
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/newscard_showmore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/newscard_body"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:text="Open in website"
                android:textSize="15sp"

                android:textStyle="bold" />
            <TextView
                android:id="@+id/newscard_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/newscard_body"
                android:textColor="@color/light_gray"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:text="Date"
                android:layout_marginEnd="30dp"
                android:textSize="12sp"
                android:textStyle="bold" />







        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>