<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/communityparentcard"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="7dp"
    app:cardCornerRadius="10dp"
    android:elevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/communityparentcard_header"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/communityparentcard_uerimage"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/default_usericon" />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/communityparentcard_uerimage">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >


                    <TextView
                        android:id="@+id/communityparentcard_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saif Ali Shaikh"
                        android:textColor="@color/gray"
                        android:textSize="13sp"
                        android:fontFamily="@font/poppins_bold" />


                    <ImageView
                        android:id="@+id/communityparentcard_verified"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/verified2"
                        android:layout_marginStart="2dp"/>

                    <TextView
                        android:id="@+id/communityparentcard_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textColor="@color/light_gray"
                        android:textSize="12sp"
                        android:textStyle="bold"

                        android:layout_gravity="center_vertical"
                       />


                </LinearLayout>


                <TextView
                    android:id="@+id/communityparentcard_class"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Class 10"
                    android:textColor="@color/light_gray"
                    android:textSize="12sp"
                    android:fontFamily="@font/roboto_bold"/>

            </LinearLayout>


            <TextView
                android:id="@+id/communityparentcard_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:text="Subject"
                android:textColor="@color/light_gray"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_bold"
                android:textStyle="bold" />


        </RelativeLayout>


        <TextView
            android:id="@+id/communityparentcard_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/communityparentcard_header"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="What is your name?"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/gray"
            android:textSize="15sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/communityparentcard_seebtn"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            app:cardCornerRadius="20dp"
            android:visibility="visible"
            android:layout_below="@id/communityparentcard_question"
            android:layout_margin="10dp"
            android:backgroundTint="#3EACF3"
            android:elevation="20dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SEE ANSWERS"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="20dp"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>


            </RelativeLayout>



        </androidx.cardview.widget.CardView>



        <TextView
            android:id="@+id/communityparentcard_showlessbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/communityparentcard_question"
           android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
           android:layout_marginStart="20dp"
            android:text="Show less"
            android:textColor="@color/light_gray"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/communityparentcard_giveansbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/communityparentcard_question"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="20dp"
            android:text="GIVE ANSWER"
            android:textColor="#3EACF3"
            android:textSize="13sp"
            android:fontFamily="@font/poppins_bold"
            android:visibility="visible" />




        <RelativeLayout
            android:id="@+id/communityparentcard_expandablelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="40dp"
            android:layout_below="@id/communityparentcard_seebtn"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true">






            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/communitychild_recycleview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


            <TextView
                android:id="@+id/communityparentcard_noanstext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:text="No Answer is there"
                android:textColor="@color/light_gray"
                android:textSize="18sp"
                android:textStyle="bold" />



        </RelativeLayout>








    </RelativeLayout>
</androidx.cardview.widget.CardView>