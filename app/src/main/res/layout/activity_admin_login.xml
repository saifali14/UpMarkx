<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminLoginActivity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_alignParentTop="true">


        <TextView
            android:id="@+id/adminlogin_textview"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/poppins_bold"
            android:text="Admin panel"
            android:textColor="@color/dark_violet"
            android:textSize="30sp" />


        <TextView
            android:id="@+id/adminlogin_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/adminlogin_textview"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Please enter the admin password to procced !!"
            android:textColor="@color/gray"
            android:textSize="17sp" />



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/adminlogin_textinputlayout_email"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/adminlogin_info"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:hint="Security Key"
            app:boxStrokeColor="@color/dark_violet"
            app:endIconMode="clear_text"
            app:hintTextColor="@color/dark_violet"
            app:startIconDrawable="@drawable/password_icon">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/adminlogin_editxt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress" />


        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/adminlogin_submtibtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/adminlogin_textinputlayout_email"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/blue2"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="17sp" />


    </RelativeLayout>


</RelativeLayout>