<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:id="@+id/hori_suggestioncard"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="2dp"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_alignParentBottom="true"
    android:layout_marginEnd="2dp"
    android:background="@drawable/latestmessge_ripple"
    android:layout_alignParentEnd="true">
    
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/hori_suggestioncard_imageview"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@color/light_gray" />


        <ImageView
            android:id="@+id/hori_suggestioncard_verified"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignTop="@id/hori_suggestioncard_imageview"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@id/hori_suggestioncard_imageview"
            android:src="@drawable/verified2"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/hori_suggestioncard_nameview"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/hori_suggestioncard_imageview"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/roboto_bold"
            android:lines="1"
            android:background="@color/light_gray"
            android:textAlignment="center"
            android:textColor="@color/violet"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/hori_suggestioncard_class"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hori_suggestioncard_nameview"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppins_bold"
            android:background="@color/light_gray"
            android:textColor="@color/light_gray"
            android:layout_marginTop="2dp"
            android:textSize="12sp" />


<!--        <Button-->
<!--            android:id="@+id/hori_suggestioncard_followbtn"-->
<!--            android:layout_width="90dp"-->
<!--            android:layout_height="40dp"-->
<!--            android:layout_below="@id/hori_suggestioncard_class"-->
<!--            android:layout_centerHorizontal="true"-->
<!--            android:backgroundTint="@color/blue"-->
<!--            android:elevation="10dp"-->
<!--            android:textAllCaps="false"-->
<!--            android:textColor="@color/white"-->
<!--            android:textSize="12sp"-->
<!--            android:visibility="visible" />-->


        <Button
            android:id="@+id/hori_suggestioncard_unfollowbtn"
            android:layout_width="95dp"
            android:layout_height="40dp"
            android:layout_below="@id/hori_suggestioncard_class"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/white"
            android:elevation="10dp"
            android:text="Following"
            android:textAllCaps="false"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:visibility="gone" />




    </RelativeLayout>


    

</androidx.cardview.widget.CardView>