<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="5dp">







    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/requestcard_imageview"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp">


        <TextView
            android:id="@+id/requestcard_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:textColor="@color/gray"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Requested to be your friend!!"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:textColor="@color/light_gray"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/requestcard_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3EACF3"
            android:layout_marginTop="5dp"
            android:textSize="15sp"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp">


            <Button
                android:id="@+id/requestcard_decline"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Decline"
                android:layout_marginEnd="10dp"/>

            <Button
                android:id="@+id/requestcard_accept"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Accept"
                android:backgroundTint="#FEFE00"
                android:layout_marginEnd="10dp"/>

        </LinearLayout>








    </LinearLayout>




    </LinearLayout>


</androidx.cardview.widget.CardView>