<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LeaderboardaboutActivity"
    android:background="#EFF3F6">


    <RelativeLayout
        android:id="@+id/leaderboardabout_upbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@color/blue">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/leaderboardabout_backbtn"
            android:fontFamily="@font/poppins_bold"
            android:text="About"
            android:textColor="@color/white"
            android:textSize="19sp" />

        <ImageView
            android:id="@+id/leaderboardabout_backbtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/backbtn" />


    </RelativeLayout>

    <View
        android:id="@+id/followers_upperview"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@color/light_gray"
        android:layout_below="@id/leaderboardabout_upbar"/>







          <com.airbnb.lottie.LottieAnimationView
              android:id="@+id/leaderboardabout_lottie"
              android:layout_width="match_parent"
              android:layout_height="250dp"
              android:layout_alignParentStart="true"

              android:background="@color/blue"
              app:lottie_autoPlay="true"
              android:layout_below="@id/leaderboardabout_upbar"
              app:lottie_rawRes="@raw/leaderboard_lottie" />


    <TextView
        android:id="@+id/leaderboardabout_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/leaderboardabout_lottie"
        android:layout_margin="10dp"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:textColor="@color/gray"
        android:fontFamily="@font/roboto_bold"/>











</RelativeLayout>