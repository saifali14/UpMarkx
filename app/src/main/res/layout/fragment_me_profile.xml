<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.MeProfileFragment"
    android:background="@color/pop">



    <RelativeLayout
        android:id="@+id/meprofile_upbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Profile"
            android:textColor="@color/gray"
            android:textSize="21sp" />

        <ImageView
            android:id="@+id/meprofile_menu"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/latestmessge_ripple_circle"
            android:src="@drawable/meprofile_menu" />


        <ImageView
            android:id="@+id/meprofile_messagebtn"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:layout_toStartOf="@id/meprofile_menu"
            android:background="@drawable/latestmessge_ripple_circle"
            android:src="@drawable/home_messageicon" />



        <ImageView
            android:id="@+id/meprofile_notificationsbtn"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:layout_toStartOf="@id/meprofile_messagebtn"
            android:background="@drawable/latestmessge_ripple_circle"
            android:src="@drawable/notification_icoon" />



    </RelativeLayout>

    <View
        android:id="@+id/home_upperview"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@color/light_gray"
        android:layout_below="@id/meprofile_upbar"/>





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/meprofile_upbar">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <View
            android:id="@+id/meprofile_background"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/profile_background"
            android:scaleType="fitXY" />


    <View
        android:id="@+id/meprofile_upperview"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_marginTop="110dp"
        android:background="@drawable/profile_up1_backgournd" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/meprofile_imageview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dp"
            android:elevation="10dp"
            android:src="@drawable/default_usericon"
            app:civ_border_color="@color/white"
            app:civ_border_width="1dp" />


        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:elevation="10dp"
            android:layout_alignEnd="@id/meprofile_imageview"
            android:layout_alignBottom="@id/meprofile_imageview">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/blue"
                android:layout_centerVertical="true"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/white"
                android:layout_centerHorizontal="true"/>


            <TextView
                android:id="@+id/meprofile_classview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:fontFamily="@font/roboto_bold"/>



        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:layout_below="@id/meprofile_imageview"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true">


            <LinearLayout
                android:id="@+id/meprofile_namelayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/meprofile_nameview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text=""
                    android:textColor="@color/violet"
                    android:textSize="22sp"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/meprofile_verfied"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/verified2"
                    android:visibility="gone" />


            </LinearLayout>


            <TextView
                android:id="@+id/meprofile_emailview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/meprofile_namelayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text=""
                android:textColor="@color/gray"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/meprofile_bioview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/meprofile_emailview"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto_bold"
                android:maxWidth="300dp"
                android:maxLines="3"
                android:text=""
                android:textAlignment="center"
                android:textColor="#6E6E6E"
                android:textSize="15sp" />

            <Button
                android:id="@+id/meprofile_editbtn"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:layout_below="@id/meprofile_bioview"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/blue"
                android:elevation="10dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Edit Profile"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp" />


            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/meprofile_bioview"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@id/meprofile_editbtn"
                android:background="@drawable/latestmessge_ripple_circle">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/meprofile_edit"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@color/white"
                    app:civ_border_color="@color/light_gray"
                    app:civ_border_width="0.5dp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/meprofileedit" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/meprofile_bioview"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@id/meprofile_editbtn">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/meprofile_sharebtn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/latestmessge_ripple_circle"
                    android:src="@color/white"
                    app:civ_border_color="@color/light_gray"
                    app:civ_border_width="0.5dp" />


                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/share_icon1" />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/userprofile_upperrow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/meprofile_editbtn"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="3"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/meprofile_answerscard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/latestmessge_ripple">


                    <TextView
                        android:id="@+id/meprofile_ans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/userprofile_anstextview"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="0"
                        android:textColor="@color/violet"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/userprofile_anstextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Answers"
                        android:textColor="@color/light_gray"
                        android:textSize="17sp"
                        app:layout_constraintEnd_toEndOf="@+id/meprofile_ans"
                        app:layout_constraintStart_toStartOf="@+id/meprofile_ans"
                        app:layout_constraintTop_toBottomOf="@id/meprofile_ans" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/meprofile_followerscard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/latestmessge_ripple">


                    <TextView
                        android:id="@+id/meprofile_followers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/userprofile_followerstextview"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="0"
                        android:textColor="@color/violet"
                        android:textSize="20sp"

                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/userprofile_followerstextview"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Followers"
                        android:textColor="@color/light_gray"
                        android:textSize="17sp"
                        app:layout_constraintEnd_toEndOf="@+id/meprofile_followers"
                        app:layout_constraintStart_toStartOf="@+id/meprofile_followers"
                        app:layout_constraintTop_toBottomOf="@id/meprofile_followers" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/meprofile_followingcard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/latestmessge_ripple">


                    <TextView
                        android:id="@+id/meprofile_following"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/userprofile_followingtextview"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="0"
                        android:textColor="@color/violet"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/userprofile_followingtextview"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Following"
                        android:textColor="@color/light_gray"

                        android:textSize="17sp"
                        app:layout_constraintEnd_toEndOf="@+id/meprofile_following"
                        app:layout_constraintStart_toStartOf="@+id/meprofile_following"
                        app:layout_constraintTop_toBottomOf="@id/meprofile_following" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>


        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/meprofile_upperview">


            <androidx.cardview.widget.CardView
                android:id="@+id/meprofile_piecard"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_marginTop="15dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/piechat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>





            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:id="@+id/meprofile_suggestionlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"

                android:layout_marginBottom="10dp">



                <TextView
                    android:id="@+id/meprofile_suggestion_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="People you may know"
                    android:textColor="@color/gray"
                    android:textSize="18sp" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/meprofile_suggestionrecy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/meprofile_suggestion_heading"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


            </RelativeLayout>







            <androidx.cardview.widget.CardView
                android:id="@+id/meprofile_followerscardview"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@color/white"
                android:layout_marginTop="15dp">


                <RelativeLayout
                    android:id="@+id/meprofile_followers_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >


                    <TextView
                        android:id="@+id/meprofile_followers_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Followers"
                        android:textColor="@color/blue"
                        android:textSize="16sp"
                        android:layout_margin="10dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"/>


                    <TextView
                        android:id="@+id/meprofile_followersshow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="View All"
                        android:textColor="@color/blue"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/meprofile_followers_recyclerview"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_below="@id/meprofile_followers_textview"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/meprofile_followingview"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@color/white"
                android:layout_marginTop="15dp">




                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/meprofile_following_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Following"
                        android:textColor="@color/blue"
                        android:textSize="16sp"
                        android:layout_margin="10dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"/>


                    <TextView
                        android:id="@+id/meprofile_followingshow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="View All"
                        android:textColor="@color/blue"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/meprofile_following_recyclerview"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_below="@id/meprofile_following_textview"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="10dp"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>



























    </RelativeLayout>

    </ScrollView>


</RelativeLayout>