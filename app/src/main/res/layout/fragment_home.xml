                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/lato_bold"
                                    android:text="English"
                                    android:textColor="@color/vlight_gray"
                                    android:textSize="17sp" />


                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>


                    </LinearLayout>


                </HorizontalScrollView>


            </LinearLayout>


            <TextView
                android:id="@+id/home_askedquetions_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_subbjectslayout"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Recently Asked Questions"
                android:textColor="@color/gray"
                android:textSize="20sp" />



            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/home_askedquestions_shrimmer"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/home_askedquetions_textview"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <include layout="@layout/home_questionscard_shrimmer"/>

                    <include layout="@layout/home_questionscard_shrimmer"/>

                    <include layout="@layout/home_questionscard_shrimmer"/>



                </LinearLayout>



            </com.facebook.shimmer.ShimmerFrameLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/home_askedquestionrecyclerview"
