<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:id="@+id/home_upbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/poppins_bold"
            android:text="upMarks"
            android:textColor="#2296F3"
            android:textSize="21sp" />


        <RelativeLayout
            android:id="@+id/home_messagelayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp">


            <ImageView
                android:id="@+id/home_messagebtn"
                android:layout_width="40dp"
                android:layout_height="match_parent"

                android:background="@drawable/latestmessge_ripple_circle"
                android:src="@drawable/home_messageicon" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/home_messageball"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@color/red"
                android:visibility="gone"
                android:layout_alignTop="@id/home_messagebtn"
                android:layout_alignEnd="@id/home_messagebtn"/>

        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/home_notificationlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toStartOf="@id/home_messagelayout">

            <ImageView
                android:id="@+id/home_notificationbtn"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@drawable/latestmessge_ripple_circle"
                android:src="@drawable/notification_icoon" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/home_notificationball"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:visibility="gone"
                android:src="@color/red"
                android:layout_alignEnd="@id/home_notificationbtn"/>

        </RelativeLayout>










    </RelativeLayout>

    <View
        android:id="@+id/home_upperview"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@color/light_gray"
        android:layout_below="@id/home_upbar"/>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:layout_below="@id/home_upperview"

        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E5EEF4">


            <RelativeLayout
                android:id="@+id/home_appbar"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:background="@color/white">


                <TextView
                    android:id="@+id/home_hello"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/lato_bold"
                    android:text="Hello,"
                    android:textColor="@color/light_gray"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/home_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/home_hello"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/gray"
                    android:textSize="25sp"
                    android:textStyle="bold" />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/home_userimage"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/default_usericon" />


            </RelativeLayout>


            <TextView
                android:id="@+id/home_selectsubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_appbar"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Select Subject"

                android:textColor="@color/gray"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/home_showallsub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_appbar"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Show All"
                android:textColor="@color/blue"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/home_subbjectslayout"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/home_selectsubject"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="135dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_marginStart="5dp"
                        android:orientation="horizontal">


                        <androidx.cardview.widget.CardView
                            android:id="@+id/home_submath"
                            android:layout_width="100dp"
                            android:layout_height="110dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="10dp">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#58B7EB">


                                <ImageView
                                    android:id="@+id/home_maths_imageview"
                                    android:layout_width="wrap_content"
                                    android:layout_height="50dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="15dp"
                                    android:src="@drawable/home_mathicon" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/home_maths_imageview"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/lato_bold"
                                    android:text="Maths"
                                    android:textColor="@color/white"
                                    android:textSize="17sp" />


                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:id="@+id/home_subphysics"
                            android:layout_width="100dp"
                            android:layout_height="110dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="10dp">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#5BE0E0">


                                <ImageView
                                    android:id="@+id/home_physics_imageview"
                                    android:layout_width="wrap_content"
                                    android:layout_height="50dp"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="15dp"
                                    android:src="@drawable/home_physics2" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/home_physics_imageview"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/lato_bold"
                                    android:text="Physics"
                                    android:textColor="@color/white"
                                    android:textSize="17sp" />


                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:id="@+id/home_subchem"
                            android:layout_width="100dp"
                            android:layout_height="110dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="10dp">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#7482BF">


                                <ImageView
                                    android:id="@+id/home_chemistry_imageview"
                                    android:layout_width="wrap_content"
                                    android:layout_height="50dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="15dp"
                                    android:src="@drawable/home_chemistryicon" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/home_chemistry_imageview"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/lato_bold"
                                    android:text="Chemistry"
                                    android:textColor="@color/vlight_gray"
                                    android:textSize="17sp" />


                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
