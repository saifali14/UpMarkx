<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/videcard_previewcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp" >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/videocardd_imageivew"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:src="@color/vlight_gray"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"

                android:scaleType="fitXY"/>


                <ImageView
                    android:id="@+id/videocard_youtubebtn"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/youtube_icon"
                    />


            <TextView
                android:id="@+id/videocard_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="2dp"
                android:layout_below="@id/videocardd_imageivew"
                android:layout_marginBottom="5dp"
                android:textColor="@color/gray"
                android:textSize="15sp"
                android:textStyle="bold"/>



        </RelativeLayout>








    </androidx.cardview.widget.CardView>




    




</RelativeLayout>