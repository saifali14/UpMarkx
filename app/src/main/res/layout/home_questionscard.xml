<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="190dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/home_questionimageview"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/default_usericon" />


        <TextView
            android:id="@+id/home_questionnameview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/home_questionimageview"
            android:fontFamily="@font/roboto_bold"
            android:text="Saif Ali Shaikh"
            android:textSize="14sp"
            android:lines="1"
            android:textColor="@color/gray" />


        <ImageView
            android:id="@+id/home_questionverified"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignTop="@id/home_questionnameview"
            android:layout_marginBottom="5dp"
            android:visibility="gone"
            android:layout_toEndOf="@id/home_questionnameview"
            android:src="@drawable/verified2" />


        <TextView
            android:id="@+id/home_questionclass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_questionnameview"
            android:layout_alignStart="@id/home_questionnameview"
            android:text="Class 10"
            android:textSize="12sp"
            android:fontFamily="@font/roboto_bold"/>



        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/light_gray"
            android:layout_below="@id/home_questionimageview"
            android:layout_margin="5dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"/>


        <TextView
            android:id="@+id/home_question_questiontext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_questionimageview"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"

            android:fontFamily="@font/roboto_bold"
            android:text="Question"
            android:textColor="@color/gray"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/home_question_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_questionimageview"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/roboto_bold"
            android:text="1 minute ago"
            android:textColor="@color/light_gray"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/home_question_question"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_below="@id/home_question_questiontext"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/lato_bold"
            android:padding="5dp"
            android:text="How are you ??"
            android:textColor="@color/black"
            android:textSize="13sp" />



        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_above="@id/home_question_giveanscard"
            android:background="@color/light_gray"/>



        <androidx.cardview.widget.CardView
            android:id="@+id/home_question_giveanscard"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:background="@drawable/latestmessge_ripple"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/home_question_giveans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Give Answer"
                    android:textSize="14sp"
                    android:textColor="@color/blue"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>


            </RelativeLayout>





        </androidx.cardview.widget.CardView>








    </RelativeLayout>

</androidx.cardview.widget.CardView>