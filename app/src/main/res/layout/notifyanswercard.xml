<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/latestmessge_ripple">



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/notifyanswer_imageview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/default_usericon"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"/>



    <TextView
        android:id="@+id/notifyanswer_nameview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saif Ali Shaikh"
        android:layout_toEndOf="@+id/notifyanswer_imageview"
        android:layout_alignTop="@id/notifyanswer_imageview"
        android:textSize="14sp"
        android:textColor="@color/dark_blue"
        android:fontFamily="@font/poppins_bold"/>


    <TextView
        android:id="@+id/notifyanswer_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notifyanswer_nameview"
        android:layout_toEndOf="@id/notifyanswer_imageview"
        android:text="mark answere to your question  "
        android:textColor="@color/gray"
        android:textSize="13sp"
        android:layout_marginEnd="35dp"
        android:fontFamily="@font/roboto_regular"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/notifyanswer_notseen"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@color/red"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"/>


    <TextView
        android:id="@+id/notifyanswer_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notifyanswer_message"
        android:layout_alignStart="@id/notifyanswer_message"
        android:fontFamily="@font/roboto_bold"
        android:text="2 days ago"
        android:textSize="12sp"
        android:layout_marginTop="5dp"/>


 
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        android:layout_below="@id/notifyanswer_time"
        android:layout_marginTop="20dp"
        android:layout_marginStart="60dp"/>


</RelativeLayout>