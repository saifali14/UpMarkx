<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/chatlog_inchatcard"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:background="@drawable/latestmessge_ripple">






    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/inchat_heartlottie"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:lottie_rawRes="@raw/flyyinghearts"
        android:visibility="gone"
        android:layout_alignBottom="@id/inchatcard"
        android:layout_toStartOf="@id/inchatcard"/>

<LinearLayout
    android:id="@+id/inchatcard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentEnd="true"
    android:layout_alignParentTop="true"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <TextView
            android:id="@+id/inchat_timetextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"

            android:textColor="#191919"
            android:textSize="10sp"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/inchat_datetextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#191919"
            android:textSize="10sp"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginBottom="1dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/chatincard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardCornerRadius="15dp"
        android:elevation="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#0094FF">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />



        <TextView
            android:id="@+id/inchat_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="240dp"
            android:minWidth="130dp"
            android:paddingStart="18dp"
            android:paddingTop="12dp"
            android:paddingEnd="18dp"
            android:paddingBottom="12dp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/white"
            android:textSize="14sp" />




    </LinearLayout>
    </androidx.cardview.widget.CardView>





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/inchat_seenicon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/notseen_icon"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="2dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />



        <androidx.cardview.widget.CardView
            android:id="@+id/inchatcard_like"
            android:layout_width="25dp"
            android:layout_height="20dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="5dp"
            android:layout_alignParentStart="true"
            android:visibility="visible"
            android:layout_centerVertical="true"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/liked_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>



        </androidx.cardview.widget.CardView>



    </RelativeLayout>





</LinearLayout>





</RelativeLayout>