<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/commentcard_imageview"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/default_usericon" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/commentcard_imageview"
        android:layout_alignTop="@id/commentcard_imageview"
        android:layout_marginTop="2dp"
        android:orientation="vertical"
        android:layout_toStartOf="@id/commentcard_like">


        <TextView
            android:id="@+id/commentcard_name_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saif Ali Shaikh . 10"
            android:layout_marginStart="10dp"
            android:textSize="13sp"
            android:textColor="@color/gray"
            android:fontFamily="@font/poppins_bold"/>

        <TextView
            android:id="@+id/commentcard_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hello everyone how all you are"
            android:layout_marginStart="10dp"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:fontFamily="@font/poppins_regular"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/commentcard_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 hour"
                android:fontFamily="@font/poppins_regular"
                android:textSize="11sp"
                android:textColor="@color/light_gray"
                android:layout_marginStart="10dp"/>


            <TextView
                android:id="@+id/commentcard_numlikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 likes"
                android:fontFamily="@font/poppins_regular"
                android:textSize="11sp"
                android:textColor="@color/light_gray"
                android:layout_marginStart="10dp"/>




        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/commentcard_like"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/like_icon" />


    <ImageView
        android:id="@+id/commentcard_liked"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/liked_icon"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"/>

</RelativeLayout>