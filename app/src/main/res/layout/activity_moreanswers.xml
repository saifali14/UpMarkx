<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoreanswersActivity"
    android:background="#E5EEF4">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E5EEF4">





    <RelativeLayout
        android:id="@+id/moreans_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/moreans_imageview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/default_usericon" />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/moreans_imageview"
            android:layout_marginStart="5dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/moreans_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="saif ali shaikh"
                    android:textColor="@color/gray"
                    android:textSize="17sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/moreansact_verified"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/verified2"
                    android:layout_marginStart="2dp"/>

            </LinearLayout>


            <TextView
                android:id="@+id/moreansact_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class 10"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/light_gray"/>



        </LinearLayout>


        <TextView
            android:id="@+id/moreans_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:text="Subject"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/light_gray"
            android:textSize="17sp"
            android:textStyle="bold" />


    </RelativeLayout>


        <TextView
            android:id="@+id/moreans_questiontextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/moreans_header"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Question:"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/light_gray"
            android:textSize="19sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/moreans_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/moreans_questiontextview"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="what is your name"
            android:textColor="@color/gray"
            android:fontFamily="@font/roboto_bold"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/moreans_allanstext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/moreans_question"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/roboto_bold"
            android:text="All answers"
            android:textColor="@color/light_gray"
            android:textSize="17sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/moreans_giveans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/moreans_question"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:text="Give Answer"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/blue"
            android:textSize="17sp"
            android:textStyle="bold" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/moreans_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/moreans_allanstext"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
    </RelativeLayout>
</ScrollView>