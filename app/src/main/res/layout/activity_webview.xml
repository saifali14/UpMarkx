<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WebviewActivity">


    <RelativeLayout
        android:id="@+id/web_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@color/white">


        <ImageView
            android:id="@+id/web_cancelbtn"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/cancel_icon" />


        <TextView
            android:id="@+id/web_linkview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/web_cancelbtn"
            android:layout_toStartOf="@id/web_appname"
            android:fontFamily="@font/lato_regular"
            android:lines="1"
            android:maxWidth="280dp"
            android:text="www.facebook.com"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/web_appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/poppins_bold"
            android:text="upMarks"
            android:textColor="#2296F3"
            android:textSize="17sp" />


    </RelativeLayout>



    <WebView
        android:id="@+id/webview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
       android:layout_below="@id/web_bar"
        android:layout_above="@id/webview_adview_banner"/>



    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/webview_adview_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-2181621433616722/8715944252">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>