<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chatlog_inImagecard"
    android:background="@drawable/latestmessge_ripple"
    android:layout_margin="5dp">






    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:id="@+id/inImage_timetextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="01:00 am"
                android:textColor="#191919"
                android:textSize="10sp"

                android:layout_marginEnd="10dp"
                android:layout_marginBottom="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/inImage_datetextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#191919"
                android:textSize="10sp"
                android:layout_marginBottom="1dp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.cardview.widget.CardView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:cardCornerRadius="15dp"
            android:elevation="20dp">

            <LinearLayout
                android:id="@+id/Imageincard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#0094FF"
              >


                <ImageView
                    android:id="@+id/inImage_Imageview"
                    android:layout_width="270dp"

                    android:layout_height="300dp"
                    android:elevation="10dp"
                    android:scaleType="fitXY"
                    android:visibility="visible"
                    android:textColor="@color/white"
                    android:textSize="14sp" />



                <TextView
                    android:id="@+id/inimage_deletetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Message deleted"
                    android:textSize="14sp"
                    android:padding="15dp"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:fontFamily="@font/lato_italic"/>


            </LinearLayout>
        </androidx.cardview.widget.CardView>





        <ImageView
            android:id="@+id/inImage_seenicon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/notseen_icon"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="2dp"/>

    </LinearLayout>



</RelativeLayout>